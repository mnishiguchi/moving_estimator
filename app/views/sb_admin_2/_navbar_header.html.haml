%nav.navbar.navbar-inverse.navbar-static-top{role: "navigation", style: "margin-bottom: 0"}
  .navbar-header
    %button.navbar-toggle{ type: 'button',
      data: { toggle: 'collapse', target: '.navbar-collapse' } }
      %span.sr-only Navigation toggle
      - 3.times do
        %span.icon-bar
    = link_to "西口", root_path, id: 'logo', class: 'navbar-brand'

    %ul.nav.top-nav.pull-right
      %li.dropdown
        %a.dropdown-toggle{"data-toggle" => "dropdown",  href: "#" }
          %i.fa.fa-user.fa-fw
          = current_user.try(:username)
          %i.fa.fa-caret-down
        %ul.dropdown-menu.dropdown-user
          %li= link_to fa_icon("fw user", text: "Dashboard"),root_path
          %li= link_to fa_icon("fw envelope", text: "Contact"), contact_path
          %li= link_to fa_icon("fw gear", text: "Settings"), edit_user_registration_path
          %li.divider
          %li= link_to fa_icon("fw power-off", text: "Log out"), destroy_user_session_path, method: :delete
