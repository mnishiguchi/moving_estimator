- provide(:title, "Edit item")

%h1.page-header Edit item of "#{@moving.title}"

%ol.breadcrumb
  %li= link_to "Dashboard", root_path, :"data-no-turbolink" => true
  %li= link_to "Mymovings", movings_path
  %li= link_to @moving.title, moving_path(@moving)
  %li.active Edit item

= form_for @moving_item, html: { id: "add_moving_item", class: "form-inline" }  do |f|

  = render 'shared/error_messages', object: f.object

  = render 'fields', f: f

  .form-group
    = f.button "Edit item", class: "submit btn btn-success",
      data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Processing..." }
