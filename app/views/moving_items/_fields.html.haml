.form-group.col-sm-6
  = f.label :name,      class: "col-sm-4"
  = f.text_field :name, class: "form-control col-sm-8"

.form-group.col-sm-6
  = f.label :category,      class: "col-sm-4"
  = f.text_field :category, class: 'form-control col-sm-8'

.clearfix

.form-group.col-sm-6
  = f.label :volume, class: "col-sm-4"
  = f.number_field :volume, in: 0..200, step: 0.5, value: 3, class: "form-control"
  = f.range_field :volume,  in: 0..200, step: 0.5, value: 3, class: "col-sm-offset-4", id: "volume_slider"

.form-group.col-sm-6
  = f.label :quantity,                             class: "col-sm-4"
  = f.number_field :quantity, in: 0..999, step: 1, class: "form-control col-sm-8"

.clearfix

.form-group.col-sm-6
  = f.label :room,      class: "col-sm-4"
  = f.text_field :room, class: 'form-control col-sm-8'

.form-group.col-sm-6
  = f.label :description,     class: "col-sm-4"
  = f.text_area :description, class: 'form-control col-sm-8',
    placeholder: "Write description"

.clearfix

:coffee

  jQuery ->

    setVolume = (volume)->
      $("#moving_item_volume").val(volume)

    # Slider

    document.getElementById('volume_slider').addEventListener 'change', ->
      setVolume(document.getElementById('volume_slider').value)

    # AutoComplete

    $('#moving_item_name').autocomplete
      source: Object.keys( $('#suggestions').data('items') )
      select: (e, ui) =>
        itemVolume = $('#suggestions').data('items')[ui.item.value]
        setVolume(itemVolume)

    $('#moving_item_room').autocomplete
      source: $('#suggestions').data('rooms')

    $('#moving_item_category').autocomplete
      source: $('#suggestions').data('categories')
