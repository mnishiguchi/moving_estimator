.table-responsive
  %table.table.table-bordered.table-hover.table-striped
    %thead
      %tr
        %th.text-center
        %th.text-center Name
        %th.text-center Vol
        %th.text-center Qty
        %th.text-center Room
        %th.text-center Category
        %th.text-center Description
        %th.text-center
    %tbody
      - @moving_items.each do |item|
        %tr.text-center
          %td= item.moving_id
          %td= item.name
          %td= item.volume
          %td= item.quantity
          %td= item.room
          %td= item.category
          %td= item.description
          %td
            = link_to "edit", edit_moving_item_path(item)
            = "|"
            = link_to "delete", moving_item_path(item), method: :delete,
                      data: { confirm: "Are you sure?" }
