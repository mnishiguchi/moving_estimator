/ .table-responsive
/   %table.table.table-bordered.table-hover.table-striped.table-condensed
/     %thead
/       %tr
/         %th.text-center
/         %th.text-center Name
/         %th.text-center Vol
/         %th.text-center Qty
/         %th.text-center Subtotal
/         %th.text-center Room
/         %th.text-center Category
/         %th.text-center Description
/         %th.text-center
/     %tbody
/       - total_vol = 0
/       - @moving_items.each do |item|
/         - total_vol += (item.volume * item.quantity)
/         %tr.text-center
/           %td= item.moving_id
/           %td= item.name
/           %td= item.volume
/           %td= item.quantity
/           %td= number_with_precision(item.volume * item.quantity, precision: 1)
/           %td= item.room
/           %td= item.category
/           %td= item.description
/           %td
/             = link_to "edit", edit_moving_item_path(item)
/             = "|"
/             = link_to "delete", moving_item_path(item), method: :delete,
/                       data: { confirm: "Are you sure?" }
/     %tfoot
/       %tr
/         %th.text-center
/         %th.text-center Total volume
/         %th.text-center
/         %th.text-center
/         %th.text-center= sprintf "%.1f cu.ft", total_vol
/         %th.text-center= sprintf "( %.1f m3 )", (total_vol/35.314)
/         %th.text-center
/         %th.text-center
/         %th.text-center
/ :css
/   tfoot {
/     background-color: #ccc
/   }
