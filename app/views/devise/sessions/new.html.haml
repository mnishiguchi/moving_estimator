- provide(:title, "Log in")

.sessions_new
  .row
    .col-lg-8.col-lg-offset-2.col-md-8.col-md-offset-2.col-sm-10.col-sm-offset-1
      .sessions_layout
        %h1.page-header
          Log in
          %span.small.text-muted &nbsp; I have a MovingEstimator account

      .row
        .col-sm-6
          = link_to fa_icon("fw facebook", text: "Log in with facebook"),
            omniauth_authorize_path(resource_name, :facebook),
            class: "btn btn-default btn-block btn-lg"
          = link_to fa_icon("fw twitter", text: "Log in with twitter"),
            omniauth_authorize_path(resource_name, :twitter),
            class: "btn btn-info btn-block btn-lg"
          %hr/

          .alert.alert-info
            New user?
            = link_to "Sign up now!", new_registration_path(resource_name)
            = link_to "Didn't receive confirmation instructions?",
              new_confirmation_path(resource_name)

        .col-sm-6
          .well= render "login_form"
