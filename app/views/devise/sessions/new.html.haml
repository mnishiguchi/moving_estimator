- provide(:title, "Log in")


.col-lg-8.col-lg-offset-2.col-md-8.col-md-offset-2.col-sm-10.col-sm-offset-1
  / .col-md-offset-3.col-md-6.col-sm-offset-2.col-sm-8
  %h1.page-header
    Log in

  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|

    .field.form-group
      = f.label :email
      = f.email_field :email, autofocus: false, class: 'form-control'

    .field.form-group
      = f.label :password
      = link_to fa_icon("fw question-circle", text: "Forgot your password?"), new_password_path(resource_name)
      = f.password_field :password, autocomplete: "off", class: 'form-control'

    - if devise_mapping.rememberable?
      .field.form-group
        .form-inline
          .checkbox
            = f.check_box :remember_me
            = f.label :remember_me

    .actions
      = f.button "Log in", class: "submit btn btn-success",
      data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Processing..." }

      %p
        or
        = link_to "Log in with twitter", omniauth_authorize_path(resource_name, :twitter)
    %br

    %p
      New user?
      = link_to "Sign up now!", new_registration_path(resource_name)

  = render "devise/shared/links"
