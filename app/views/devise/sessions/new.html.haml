- provide(:title, "Log in")

.col-md-offset-3.col-md-6.col-sm-offset-2.col-sm-8
  %h2.page-header.center
    Log in

  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|

    .field.form-group
      = f.label :email
      %br/
      = f.email_field :email, autofocus: false, class: 'form-control'

    .field.form-group
      = f.label :password
      = link_to fa_icon("fw question-circle", text: "Forgot your password?"), new_password_path(resource_name)
      %br/
      = f.password_field :password, autocomplete: "off", class: 'form-control'

    - if devise_mapping.rememberable?
      .field.form-group
        = f.check_box :remember_me
        = f.label :remember_me

    .actions
      / = f.submit "Log in"
      = f.button "Log in", class: "submit btn btn-success",
      data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Processing..." }
    %br
    %p
      New user?
      = link_to "Sign up now!", new_registration_path(resource_name)
  = render "devise/shared/links"
  = render 'layouts/footer'
