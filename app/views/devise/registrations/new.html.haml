- provide(:title, "Sign up")

.sessions_new
  .row
    .col-lg-8.col-lg-offset-2.col-md-8.col-md-offset-2.col-sm-10.col-sm-offset-1
      .sessions_layout
        %h1.page-header
          Sign up
          %span.small.text-muted &nbsp; Create a MovingEstimator account

      .row
        .col-sm-6
          = link_to fa_icon("fw twitter", text: "Sign up with twitter"), user_omniauth_authorize_path(:twitter),
          class: "btn btn-info btn-block btn-lg"
          %hr/

          .alert.alert-info
            Already have an account?
            = link_to "Log in", new_user_session_path
            %br/
            = link_to "Didn't receive confirmation instructions?", new_user_confirmation_path

        .col-sm-6.well
          = render("devise/shared/signup_form")
