- provide(:title, "Sign up")

.col-md-offset-3.col-md-6.col-sm-offset-2.col-sm-8
  %h1.page-header
    Sign up

  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|

    - if params[:omniauth_fail]
      .alert.alert-danger Email address is required.
    - else
      = devise_error_messages!

    .field.form-group
      = f.label :username
      = f.text_field :username, autofocus: false, class: 'form-control'

    .field.form-group
      = f.label :email
      = f.email_field :email, autofocus: false, class: 'form-control'

    - if f.object.password_required?

      .field.form-group
        = f.label :password
        - if @validatable
          %em
            (#{@minimum_password_length} characters minimum)
        = f.password_field :password, autocomplete: "off", class: 'form-control'

      .field.form-group
        = f.label :password_confirmation
        = f.password_field :password_confirmation, autocomplete: "off", class: 'form-control'

    .actions
      = f.button "Create my account", class: "submit btn btn-success",
          data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Processing..." }
    %br/
    %p
      Already have an account?
      = link_to "Log in", new_session_path(resource_name)

  = render "devise/shared/links"
