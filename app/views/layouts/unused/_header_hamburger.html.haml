/ Header with a hamburger toggle.
%header.navbar.navbar-fixed-top.navbar-inverse
  .container
    .navbar-header
      / Hamburger button
      %button.navbar-toggle.collapsed{ type: 'button',
        data: { toggle: 'collapse', target: '.hamburger' } }
        %span.sr-only Navigation toggle
        - 3.times do
          %span.icon-bar
      = link_to "西口", root_path, id: 'logo', class: 'navbar-brand'

    / Nav links for toggling
    %nav.collapse.navbar-collapse.hamburger.navbar-right
      %ul.nav.navbar-nav.navbar-right{ role: 'menu' }
        -# Show different menu items depending on the login status.
        -if user_signed_in?
          %li= link_to "#{current_user.email}", root_path
          %li= link_to "Settings", edit_user_registration_path
          %li= link_to "Log out", destroy_user_session_path, method: :delete

