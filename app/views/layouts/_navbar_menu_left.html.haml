/ Links for logged-in users
- if user_signed_in?
  %li.dropdown
    %a.dropdown-toggle{ "data-toggle" => "dropdown", href: "#" }
      = fa_icon "fw user", text: current_user.try(:username)
      = fa_icon "caret-down"
    %ul.dropdown-menu
      %li= link_to fa_icon("fw dashboard", text: "My movings"),root_path
      %li= link_to fa_icon("fw gear", text: "Settings"), edit_user_registration_path
      %li= link_to fa_icon("fw list", text: "Todo list"), todos_path, :"data-no-turbolink" => true
      %li= link_to fa_icon("fw envelope", text: "Contact"), contact_path
      %li.divider
      %li= link_to fa_icon("fw power-off", text: "Log out"), destroy_user_session_path, method: :delete

  - if current_user.admin?
    / Links for admin only
    %li.dropdown
      %a.dropdown-toggle{ "data-toggle" => "dropdown",  href: "#" }
        = fa_icon "fw unlock", text: "Admin"
        = fa_icon "caret-down"
      %ul.dropdown-menu
        %li= link_to fa_icon("fw users", text: "Users"), users_path
        %li= link_to fa_icon("fw table", text: "Rooms"), rooms_path, :"data-no-turbolink" => true
        %li= link_to fa_icon("fw table", text: "Ingredients"), ingredients_path
