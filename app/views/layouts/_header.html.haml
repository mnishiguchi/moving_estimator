/ Navigation
%header.navbar.navbar-fixed-top.navbar-inverse
  .container
    = link_to "西口", root_path, id: 'logo', class: 'navbar-brand'
    / Top Menu Items
    %ul.nav.top-nav.navbar-right.pull-right
      -if user_signed_in?
        = render 'layouts/dropdown_logged_in'
