/ Navigation
%header.navbar.navbar-fixed-top.navbar-inverse
  .container
    = link_to "西口", root_path, id: 'logo', class: 'navbar-brand'
    / Top Menu Items
    %ul.nav.top-nav.navbar-right.pull-right
      -if user_signed_in?
        %li.dropdown
          %a.dropdown-toggle{ "data-toggle" => "dropdown" }
            %i.fa.fa-user
            = current_user.try(:username)
            %b.caret
          %ul.dropdown-menu
            %li= link_to fa_icon("fw user", text: "Dashboard"),root_path
            %li= link_to fa_icon("fw envelope", text: "Contact"), contact_path
            %li= link_to fa_icon("fw gear", text: "Settings"), edit_user_registration_path
            %li.divider
            %li= link_to fa_icon("fw power-off", text: "Log out"), destroy_user_session_path, method: :delete
      - else
        %li= link_to "Sign up", new_user_registration_path
        %li= link_to "Log in", new_user_session_path
        %li= link_to "Contact", contact_path
