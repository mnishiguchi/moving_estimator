%ul.nav.top-links.pull-right
  / Links for logged-in users
  %li.dropdown
    %a.dropdown-toggle{ "data-toggle" => "dropdown",  href: "#" }
      %i.fa.fa-user.fa-fw
      = current_user.try(:username)
      %i.fa.fa-caret-down
    %ul.dropdown-menu
      %li= link_to fa_icon("fw dashboard", text: "Dashboard"),root_path
      %li= link_to fa_icon("fw gear", text: "Settings"), edit_user_registration_path
      %li= link_to fa_icon("fw envelope", text: "Contact"), contact_path
      %li.divider
      %li= link_to fa_icon("fw power-off", text: "Log out"), destroy_user_session_path, method: :delete

  -if current_user.admin?
    / Links for admin only
    %li.dropdown
      %a.dropdown-toggle{"data-toggle" => "dropdown",  href: "#" }
        %i.fa.fa-unlock.fa-fw
        Admin
        %i.fa.fa-caret-down
      %ul.dropdown-menu
        %li= link_to fa_icon("fw users", text: "Users"), users_path
