-if user_signed_in?
  / Links for logged-in users
  %li
    %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", href: "#", role: "button"}
      New
      %span.caret
    %ul.dropdown-menu
      %li= link_to "Moving", new_moving_path

  %li= link_to "My movings", movings_path

  %li.dropdown
    %a.dropdown-toggle{ "data-toggle" => "dropdown", href: "#" }
      = fa_icon "fw user", text: current_user.try(:username)
      = fa_icon "caret-down"
    %ul.dropdown-menu
      %li= link_to fa_icon("fw dashboard", text: "My movings"),root_path
      %li= link_to fa_icon("fw list", text: "Todo list"), todos_path, :"data-no-turbolink" => true
      %li= link_to fa_icon("fw gear", text: "Settings"), edit_user_registration_path
      %li= link_to fa_icon("fw envelope", text: "Contact"), contact_path
      %li.divider
      %li= link_to fa_icon("fw power-off", text: "Log out"), destroy_user_session_path, method: :delete

- else
  / Links for non-logged-in users
  %li= link_to "Sign up", new_user_registration_path
  %li= link_to "Log in", new_user_session_path
  %li= link_to "Contact", contact_path
