- provide(:title, "Contact")

%h2.page-header
  Contact us

= form_for @contact, url: contact_path do |f|
  = render 'shared/error_messages', object: f.object

  .form-group
    = f.label :username
    = f.text_field :username, class: "form-control", value: current_user.try(:username)

  .form-group
    = f.label :email
    = f.email_field :email, class: "form-control", value: current_user.try(:email)

  .form-group
    = f.label :message
    = f.text_area :message, class: "form-control"

  .form-group
    = f.button "Submit", class: "submit btn btn-success",
      data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Processing..." }

= render "shared/about_author"
