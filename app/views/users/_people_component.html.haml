#PeopleSection.well

  #PeopleSearch
    .filter-wrapper
      = form_tag(users_path, method: "get") do
        = text_field_tag :search, nil, placeholder: "people search", class: "form-control"
        = submit_tag "", style: "display: none;"

  .PaginatorSection
    = will_paginate @users

  .cards-wrapper
    #cardsNode
      #masonry-container-people.transitions-enabled.centered.clearfix.masonry.masonry-brick
        - @users.each do |user|
          = render 'user', user: user

  .PaginatorSection
    = will_paginate @users
