- provide(:title, "My movings")

= render "devise/shared/pending_email_message"

.profile_header{ style: "margin-top: 20px;" }
  = render "profile_header"

= render "shared/dump_resource_data", resource: current_user

%ul.nav.nav-tabs{ role: 'tablist', style: "margin-top: 30px;" }
  %li.active
    %a{ href: "#tab_movings", role: "tab", data: { toggle: "tab" } }
      My movings
  %li
    %a{ href: "#tab_todos", role: "tab", data: { toggle: "tab" } }
      Todo list

.tab-content
  #tab_movings{ class: "tab-pane fade active in" }
    = render "movings"
  #tab_todos{ class: "tab-pane fade" }
    .todos_wraper{ style: "padding: 10px 5px;"}
      = render "shared/todo_app"

:css

  .todos_wraper {
    style: "padding: 10px 5px;"
  }
