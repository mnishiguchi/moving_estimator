- provide(:title, @moving.title)

%h1.page-header
  = @moving.title
  = link_to "Edit", edit_moving_path(@moving), class: "btn btn-primary btn-sm pull-right"
  %br/
  %small= @moving.description


%ol.breadcrumb
  %li= link_to "Dashboard", root_path, :"data-no-turbolink" => true
  %li= link_to "My movings", movings_path
  %li.active= @moving.title

= link_to "Add new item", { controller: :moving_items, action: :new },
  class: "btn btn-primary", style: "margin-bottom: 20px;"

= render 'moving_items/add_form'

.row
  .col-sm-12

    .panel.panel-default
      .panel-heading
        %h3.panel-title
          All items
      .panel-body
        .table-responsive
          %table.table.table-bordered.table-hover.table-striped
            %thead
              %tr
                %th
                %th Name
                %th Vol
                %th Qty
                %th Room
                %th Category
                %th Description
                %th
            %tbody
              - @moving_items.each do |item|
                %tr
                  %td= item.moving_id
                  %td= item.name
                  %td= item.volume
                  %td= item.quantity
                  %td= item.room
                  %td= item.category
                  %td= item.description
                  %td
                    = link_to "edit", edit_moving_item_path(item)
                    = "|"
                    = link_to "delete", moving_item_path(item), method: :delete,
                              data: { confirm: "Are you sure?" }
