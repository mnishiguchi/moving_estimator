- provide(:title, @moving.title)

%h1.page-header
  = @moving.title
  %small= @moving.description

= link_to "Add new item", { controller: :moving_items, action: :new },
  class: "btn btn-primary", style: "margin-bottom: 20px;"

.row
  .col-sm-12

    .panel.panel-default
      .panel-heading
        %h3.panel-title
          All items
      .panel-body
        .table-responsive
          %table.table.table-bordered.table-hover.table-striped
            %thead
              %tr
                %th Moving ID
                %th Name
                %th Volume
                %th Quantity
                %th Room
                %th Category
                %th Description
            %tbody
              - @moving_items.each do |mi|
                %tr
                  %td= mi.moving_id
                  %td= mi.name
                  %td= mi.volume
                  %td= mi.quantity
                  %td= mi.room
                  %td= mi.category
                  %td= mi.description
